<script>
    document.addEventListener("DOMContentLoaded", () => {
        window.toggleFlip = function (card) {
            card.classList.toggle("flipped");
        }
    
        // Attach the event listener for "Read more" links
        document.querySelectorAll(".read-more-link").forEach(link => {
            link.addEventListener("click", function(event) {
                toggleText(event);
                event.stopPropagation(); // Prevent card flip when clicking "Read more"
            });
        });
    });
    
    function toggleText(event) {
        event.preventDefault();
        const card = event.target.closest(".flip-card");
        const textElement = card.querySelector(".card-text");
        const readMoreLink = card.querySelector(".read-more-link");
    
        // Toggle full and shortened text
        if (textElement.classList.contains("shortened")) {
            textElement.textContent = fullText[card.dataset.index]; // Use index from data attribute
            readMoreLink.textContent = "Read less";
            textElement.classList.remove("shortened");
        } else {
            textElement.textContent = shortenedText[card.dataset.index]; // Use index from data attribute
            readMoreLink.textContent = "Read more";
            textElement.classList.add("shortened");
        }
    }
    
    // Store full text and first 20 words for each card
    const fullText = [
        "Vi fik til opgave at udvikle og kode et redesign til Karrusel Festival. Målet var at få en forståelse af designsystemer og at oprette komponenter og variabler både i figma og i vscode.",
        "Caseopgaven gik ud på at skabe et redesign til Digital Cleanup Days hjemmeside, men oversat til dansk. Målet var at opbygge erfaring med infografik og datavisualisering.",
        "Dette var min gruppe og jegs eksamensprojekt fra 2. semester, som vi alle er meget stolte af. Opgaven var at finde en virksomhed og hjælpe dem med at udnytte deres digitale platforme. Derudover designede og udviklede vi en spritny hjemmeside til dem.",
        "Casen gik ud på at designe og udvikle en webfeature til en lille virksomhed. ITMV er en tøjbutik, giver nyt liv til kasserede tekstiler bidrage til den grønne omstilling samt skabe jobs til socialt udsatte kvinder."
    ];
    
    const shortenedText = fullText.map(text => text.split(" ").slice(0, 20).join(" ") + "...");
    
    // Initialize the text for each card
    document.querySelectorAll(".card-text").forEach((textElement, index) => {
        textElement.textContent = shortenedText[index];
        textElement.classList.add("shortened");
    });
    </script>